{% extends '::base.html.twig' %}

{% block body %}
    <div class="container">
        {% if user == null %}
            <h2 align="center" style="margin-bottom: 5%">Bienvenue sur Carnet d'adresse connectez ou inscrivez-vous pour commencer</h2>
        {% else %}
            <h2 align="center" style="margin-bottom: 5%">Bienvenue dans votre Carnet d'adresse {{ user }}</h2>
            <div align="center">
                <form class="form-horizontal">
                    <div class="form-group">
                        <div class="col-lg-5 control-label">
                            <label>Contact:</label>
                        </div>
                        <div class="col-lg-2">        
                            <button type="submit" class="btn btn-default" formaction="http://localhost/TestAppartoo/web/app_dev.php/create">Creer contact</button>     
                        </div>
                    </div>

                    {% for contact in contacts %}
                        <hr width="40%">
                        <div class="form-group">
                            <div class="col-lg-5 control-label">
                                <label>{{ contact.Prenom }} {{ contact.Nom }} </label>
                            </div>
                            <div class="col-lg-3">     
                                <button type="submit" class="btn btn-default" formaction="http://localhost/TestAppartoo/web/app_dev.php/detail/{{contact.idContact}}" >Detail</button>
                                <button type="submit" class="btn btn-default" formaction="http://localhost/TestAppartoo/web/app_dev.php/modification/{{contact.idContact}}" >Modifier</button>                         
                                <button type="submit" class="btn btn-default" formaction="http://localhost/TestAppartoo/web/app_dev.php/delete/{{contact.idContact}}" >Suppression</button>
                            </div>
                        </div>
                    {% endfor %}   

                </form>              
            </div>
        {% endif %}  
    </div>   
{% endblock %}

